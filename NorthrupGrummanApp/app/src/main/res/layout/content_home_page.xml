<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.brye.northrupgrummanapp.HomePage"
    tools:showIn="@layout/activity_home_page"
    tools:ignore="ExtraText">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_info"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_result1"
        tools:text="From"
        android:layout_below="@+id/button_get"
        android:layout_alignRight="@+id/button_get"
        android:layout_alignEnd="@+id/button_get"
        android:layout_marginTop="122dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_from"
        android:textStyle="italic"
        android:text="From Location"
        android:layout_toRightOf="@+id/textView_result1"
        android:layout_toEndOf="@+id/textView_result1"
        android:layout_alignTop="@+id/textView_result1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_to"
        android:textStyle="italic"
        android:text="To Location"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignBottom="@+id/textView_result2"
        android:layout_alignLeft="@+id/editText_from"
        android:layout_alignStart="@+id/editText_from" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_result2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Direction"
        android:id="@+id/btn_newDirection"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="createNewDirection" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_get"
        android:text="GO"
        android:layout_below="@+id/textView_info"
        android:layout_toRightOf="@+id/textView_info"
        android:layout_toEndOf="@+id/textView_info"
        android:layout_marginTop="15dp" />




    <TextView
        android:layout_width="323dp"
        android:layout_height="102dp"
        android:id="@+id/loc"
        android:textAlignment="center"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
